<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="10dp"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="10dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageView
            android:id="@+id/color_item"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/circle" />

        <LinearLayout
            android:id="@+id/event_item"
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/color_item">
            <!--        android:layout_toLeftOf="@id/deletebtn">-->
            <TextView
                android:id="@+id/event_title"
                android:text="Giáng Sinh"
                android:textColor="@color/black"
                android:layout_marginBottom="5dp"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/event_repeat"
                android:text="Hàng năm"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/event_date_time"
                android:text="22 tháng 10, Thứ Sáu, 22/10/2021"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!--    <ImageButton-->
        <!--        android:id="@+id/deletebtn"-->
        <!--        android:layout_width="50dp"-->
        <!--        android:layout_height="70dp"-->

        <!--        android:layout_alignParentRight="true"-->
        <!--        android:layout_centerVertical="true"-->
        <!--        android:padding="2dp"-->
        <!--        android:background="@drawable/delete2"/>-->
    </RelativeLayout>

</androidx.cardview.widget.CardView>